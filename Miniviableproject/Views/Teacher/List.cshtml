@model List<Miniviableproject.Models.Teacher>

<h2>List of Teachers</h2>
<p>
    @Html.ActionLink("Add New Teacher", "Add")
</p>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
            
            <th>Action1</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var teacher in Model)
        {
        <tr>
            <td>@teacher.teacherid</td>
            <td>@teacher.teacherfname</td>
            <td>@teacher.teacherlname</td>
            
            <td>
                <a href="@Url.Action("Show", "Teacher", new { id = teacher.teacherid })">Show</a>
                <a href="@Url.Action("Edit", "Teacher", new { id = teacher.teacherid })">Edit</a>
                <a href="@Url.Action("Delete", "Teacher", new { id = teacher.teacherid })">Delete</a>
            </td>

        </tr>
        }
    </tbody>
</table>
